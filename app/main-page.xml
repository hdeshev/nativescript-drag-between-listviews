<Page loaded="pageLoaded">
  <GridLayout  columns="*,*" rows="*,*,*" id="itemLR">
    <Label text="Label BEFORE" row="0" col="0" colSpan="2" backgroundColor="lightblue" />
    <ListView items="{{ leftItems }}" itemTap="itemTap" row="1" col="0" backgroundColor="green" id="Litem">
      <ListView.itemTemplate>
        <Label text="{{$value}}" pan="dragit" />
      </ListView.itemTemplate>
    </ListView>
    <ListView items="{{ rightItems }}" row="1" col="1" backgroundColor="yellow" />
    <Label text="Label END" row="2" col="0" colSpan="2" backgroundColor="lightblue"/>
    <AbsoluteLayout row="1" col="0" colspan="2" style="border-color: lime; border-width: 2" backgroundColor="transparent">
      <Label  text="drag me" id="dragLabel" backgroundColor="pink" visibility="collapsed" style="border-color: red; border-width: 2"/>
    </AbsoluteLayout>
  </GridLayout>
</Page>
